@model Vidly2.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@if (Model.MembershipType != null)
{
    <li>Membership Type: @Model.MembershipType.Name </li>
}
@if (Model.Birthday != null)
{
    <li>Birthdate: @Model.Birthday.Value.ToShortDateString() </li>
}


