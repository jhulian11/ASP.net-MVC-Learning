@model IEnumerable<Vidly2.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (Model.Count() == 0)
{
    <p>
        You have no customers.
    </p>
}

else
{
    <table class="table table-bordered table-hover">
       <thead>
           <tr>
               <th>Customer</th>
               <th>Membership Type</th>
           </tr>
        </thead>
    <tbody>
      @foreach (var custom in Model)
       {
        <tr>
            <td> @Html.ActionLink(custom.Name, "Edit", "Customers", new { id = custom.Id }, null)</td>
            <td>@custom.MembershipType.Name</td>
        </tr>
       }
    
    </tbody>
    </table>
}




