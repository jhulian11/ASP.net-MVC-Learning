@model IEnumerable<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("New Movie", "NewMovie", "Movies", null, new {@class = "btn btn-primary"})
</p>

@if (Model.Count() == 0)
{
    <p>
        You have no Movies.
    </p>
}

else
{
    <table id ="movies" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td> @Html.ActionLink(movie.Name, "EditMovie", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td> <button data-movie-Id ="@movie.Id" class="btn-link js-delete"> Delete </button> </td>
            </tr>
        }
    
        </tbody>
    </table>

    @section scripts
    {
        <script>
            $(document).ready(function() {

                $("#movies .js-delete").on("click",function() {

                    var button = $(this);

                    if (confirm("Do u want to delete?")) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-Id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        })
                    }
                })

            })
        </script>
    }
}

